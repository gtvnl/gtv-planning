<h1 text="text-center">Weken </h1>

<%= link_to 'Create weeks', '' %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Monteurs</th>
      <th>Capaciteit</th>
      <th>Uren Geplanned</th>
      <th>Uren Beschikbaar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weeks.each do |week| %>
      <tr>
        <td><%= week.name %></td>
        <td><%= week.number %></td>
        <td><%= week.mechanics %></td>
        <td><%= week.capacity %></td>
        <td><%= Order.production_hours_this_week(week.number).round / 2.0 %></td>
        <td><%= (week.capacity - Order.production_hours_this_week(week.number)).round / 2.0 %></td>
        <td>
          <%= link_to week do %><i class="fi-eye"></i><% end %>
          <%= link_to edit_week_path(week)  do %><i class="fi-pencil"></i><% end %>
          <%= link_to week, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fi-trash"></i><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Week', new_week_path %>
